<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="Makara.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:view="clr-namespace:Makara.Views"
    Title="Makara"
    Shell.FlyoutBehavior="Flyout">

    <!--  Changed to use a TabBar for multiple pages  -->
    <TabBar>
        <!--  Word Pick Page  -->
        <ShellContent
            Title="Word Pick"
            ContentTemplate="{DataTemplate view:WordPickPage}"
            Route="wordpick" />
        <!--  Data Migrate Page  -->
        <ShellContent
            Title="Data Migration"
            ContentTemplate="{DataTemplate view:DataMigratePage}"
            Route="datamigrate" />
    </TabBar>

</Shell>
